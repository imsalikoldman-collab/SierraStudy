# Default to automatic text normalization
* text=auto

# Force Windows-style endings for MSBuild/Visual Studio artifacts
*.sln text eol=crlf
*.vcxproj text eol=crlf
*.vcxproj.filters text eol=crlf
*.props text eol=crlf
*.targets text eol=crlf

# Source files diff settings
*.cpp diff=cpp
*.hpp diff=cpp
*.h diff=cpp

# Scripts
*.ps1 text eol=crlf
*.bat text eol=crlf

# Binary artifacts
*.dll binary
*.lib binary
*.exe binary
*.pdb binary

# Treat vendored third-party code as such for tooling
third_party/** linguist-vendored
